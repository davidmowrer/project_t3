<h1>Listing players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Level number</th>
      <th>Level name</th>
      <th>Crew number</th>
      <th>Crew name</th>
      <th>Games played</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.level_number %></td>
        <td><%= player.level_name %></td>
        <td><%= player.crew_number %></td>
        <td><%= player.crew_name %></td>
        <td><%= player.games_played %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

